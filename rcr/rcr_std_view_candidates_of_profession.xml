<?xml version="1.0" encoding="windows-1251"?>
<std_view SPXML-FORM="//base1/base1_std_view.xmd">
	<id>candidates_of_profession</id>
	<name VALUE="Кандидаты по специальности" lang-en:VALUE="Candidates by Profession" lang-ua:VALUE="Кандидати по спеціальності"/>
	<parent_id>candidates</parent_id>

	<drop_all_dyn_filters>1</drop_all_dyn_filters>

	<dyn_filters>
		<dyn_filter>
			<id>idata_profession_id</id>
			<is_auto>1</is_auto>
		</dyn_filter>
		<dyn_filter>
			<id>is_active</id>
			<title VALUE="Только кандидаты в работе" lang-en:VALUE="Active candidates only" lang-ua:VALUE="Тільки кандидати в роботі"/>
		</dyn_filter>
		<dyn_filter>
			<id>user_id</id>
			<view_filter_expr>{is_active:true}</view_filter_expr>
		</dyn_filter>
	</dyn_filters>

	<fields>
		<field>
			<id>state_date</id>
			<use_time>0</use_time>
			<col_title VALUE="##UiText.fields.date##"/>
		</field>
		<field>
			<id>fullname</id>
		</field>
		<field>
			<id>state_id</id>
		</field>
		<field>
			<id>main_vacancy_id</id>
			<width>40%</width>
		</field>
		<field>
			<id>main_vacancy_org_id</id>
			<exist_req_expr>global_settings.is_agency</exist_req_expr>
			<width>30%</width>
		</field>
		<field>
			<id>main_vacancy_division_id</id>
			<exist_req_expr>! global_settings.is_agency</exist_req_expr>
			<width>30%</width>
		</field>
		<field>
			<id>last_job_org_name</id>
			<text_color>90,0,120</text_color>
			<width>30%</width>
		</field>
		<field>
			<id>user_id</id>
		</field>
	</fields>
</std_view>
