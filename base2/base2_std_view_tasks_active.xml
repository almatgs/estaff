<?xml version="1.0" encoding="windows-1251"?>

<std_view SPXML-FORM="//base1/base1_std_view.xmd">
	<id>tasks_active</id>
	<parent_id>tasks</parent_id>
	<name VALUE="Активные задачи" lang-en:VALUE="Active Tasks" lang-ua:VALUE="Активні завдання"/>

	<dyn_filters>
		<dyn_filter>
			<id>type_id</id>
		</dyn_filter>

		<dyn_filter>
			<id>user_id</id>
			<view_filter_expr>filter.ChildExists( 'group_id' ) &amp;&amp; filter.group_id.HasValue ? {main_group_id:filter.group_id}:undefined</view_filter_expr>
			<use_store>1</use_store>
		</dyn_filter>

		<dyn_filter>
			<id>group_id</id>
			<exist_req_expr>lib_user.use_groups</exist_req_expr>
			<use_store>1</use_store>
		</dyn_filter>
	</dyn_filters>

	<fields>
		<field>
			<id>creation_date</id>
			<use_time>0</use_time>
		</field>
		<field>
			<id>creation_date</id>
			<time_only>1</time_only>
			<col_title VALUE="##UiText.titles.time##"/>
		</field>
		<field>
			<id>type_id</id>
			<align>center</align>
		</field>
		<field>
			<id>name</id>
			<width>100%</width>
		</field>
		<field>
			<id>person_id</id>
		</field>
		<field>
			<id>comment</id>
		</field>
	</fields>
</std_view>

