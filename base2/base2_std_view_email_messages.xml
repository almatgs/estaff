<?xml version="1.0" encoding="windows-1251"?>
<std_view SPXML-FORM="//base1/base1_std_view.xmd">
	<id>email_messages</id>
	<name VALUE="Загруженные письма"/>

	<allow_preview>1</allow_preview>

	<dyn_filters>
		<dyn_filter>
			<id>person_id</id>
		</dyn_filter>
	</dyn_filters>

	<fields>
		<field>
			<id>date</id>
			<use_time>1</use_time>
		</field>
		<field>
			<id>is_outgoing</id>
			<title_expr>is_outgoing ? StrLowerCase( UiText.titles.outgoing ) : StrLowerCase( UiText.titles.incoming )</title_expr>
			<width>14zr</width>
		</field>
		<field>
			<id>candidate_id</id>
			<width>38zr</width>
		</field>
		<field>
			<id>peer_person_id</id>
			<width>38zr</width>
		</field>
		<field>
			<id>subject</id>
		</field>
		<field>
			<id>person_id</id>
			<width>32zr</width>
		</field>
	</fields>
</std_view>

